@phdthesis{ChenJing600MWXiaoXingXianJinFeiShuiDuiGaiNianSheJiPdf1999,
  type     = {硕士毕业论文},
  title    = {{600MW小型先进沸水堆概念设计}.pdf},
  abstract = {小型先进沸水堆属于新一代先进轻水反应堆，它在充分吸收现有反应堆设计和运行的经验基础之上，通过引入非能动安全性等先进设计思想，简化系统，降低成本，在提高安全性的同时改善了经济性，实现了两者的和谐统一。小型先进沸水堆的研究和开发已成为当今核能界的热点之一。论文工作的目的是通过600MW小型先进沸水堆概念设计，力争在新一代先进沸水堆领域作出一些突破，从而发展我国自己的沸水堆技术，跟踪和赶超世界先进水平。本报告较为全面地介绍了沸水堆的发展历史，先进反应堆的发展状况和特点，其中尤其对小型先进反应堆中的新一代简化沸水堆作了重点介绍。在借鉴国外先进经验基础之上，结合国内在先进反应堆方面的研究成果，对600MW小型先进沸水堆的概念设计作了初步的设想，并对实现这些设想所涉及到的工作内容、方法及安排作了简要的介绍。},
  language = {zh},
  school   = {清华大学},
  author   = {{陈景}},
  year     = {1999}
}

@phdthesis{ChenJingXiaoXingJianHuaFeiShuiDuiYanJiuPdf2003,
  address  = {163},
  type     = {博士毕业论文},
  title    = {小型简化沸水堆研究.pdf},
  abstract = {随着用户需求的不断提高，我国的核供热堆技术面临着进一步发展的需求；与此同时，具有非能动安全特点的小型简化沸水堆得到了蓬勃发展，已成为未来反应堆技术发展的一个重要方向。论文进行小型简化沸水堆研究的目的，就是基于已有的核供热堆技术，结合先进的简化沸水堆技术，在解决升级开发核供热堆现实工程问题的同时，发展我国自己的先进反应堆技术。课题涉及到反应堆物理、热工以及安全等多个方面，具有涉及面宽、工作量大、难点较多的特点。其主要研究工作与成果包括：①在广泛调研新型核安全概念和国际上先进中小型反应堆设计特点的基础之上，确定了小型简化沸水堆CSBWR600简化与非能动安全的设计指导思想，提出并完成了CSBWR600总体设计方案；②详细摸索了沸水堆物理设计的规律，并结合借鉴成熟沸水堆BWR6的物理设计进行了对比和论证。针对CSBWR600控制棒从堆芯顶部插入的特殊设计，综合采用富集度和含钆量轴向分区、控制栅等多种措施，解决了轴向功率分布展平的问题。在国内首次完成了具有良好性能的小型简化沸水堆完整物理方案设计；③论文对各种重要的热工水力参数，如冷却剂循环方式、主要运行参数、堆芯出口含汽量等参数的选择和确定进行了详细讨论。以简化和非能动安全的设计思想为指导，在国内首次完成了小型简化沸水堆的热工水力方案设计。结合CSBWR600功率规模小、压力壳较大等特点，提出并验证了在堆中取消汽水分离器方案的可行性；④探索了CSBWR600安全设施的设计，其中着重研究了非能动余热排出系统的设计规律，并在此基础之上完成了CSBWR600非能动余热排出系统的设计；分别完成了CSBWR600干式、湿式两种安全壳的热工特性分析与方案设计，并进行了取消安全壳喷淋与冷却系统的改进；⑤详细讨论了CSBWR600的安全特性，通过六种关键事故的分析，验证了方案的安全性。论文在国内首次提出并完成了小型简化沸水堆CSBWR600的方案设计，为我国先进反应堆技术的发展进行了探索，积累了经验。},
  language = {zh},
  school   = {清华大学},
  author   = {{陈景}},
  year     = {2003}
}

